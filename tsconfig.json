{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist/js",
    "baseUrl": ".",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "_test"
  ]
}
